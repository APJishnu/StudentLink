<script>
   $(document).ready(function() {
        // Close the navbar when a link is clicked, except for the dropdown link
        $('.navbar-nav a').on('click', function(event){
            if (!$(this).hasClass('dropdown-toggle')) {
                // Check if the navbar is collapsed (only collapse if it's not already collapsed)
                if ($('.navbar-collapse').hasClass('show')) {
                    $('.navbar-collapse').collapse('hide');
                }
            }
        });

        // Toggle the navbar when the toggle button is clicked
        $('.navbar-toggler').on('click', function(){
            if ($('.navbar-collapse').hasClass('show')) {
                $('.navbar-collapse').collapse('hide');
            } else {
                $('.navbar-collapse').collapse('show');
            }
        });

        // Prevent the dropdown link from closing the navbar on mobile
        $('.navbar-nav .dropdown-toggle').on('click', function(event){
            var $el = $(this).next('.dropdown-menu');
            $el.toggleClass('show');
            return false; // Prevent default behavior of the link
        });

        // Close the dropdown when clicking outside of it
        $(document).on('click', function (e) {
            if (!$(e.target).closest('.navbar-nav .dropdown-toggle').length) {
                $('.navbar-nav .dropdown-menu').removeClass('show');
            }
        });
    });
</script>