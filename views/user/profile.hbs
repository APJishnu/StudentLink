<section>
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
<div class="col-xl-6 col-md-12 mt-5">
                                                <div class="card user-card-full">
                                                    <div class="row m-l-0 m-r-0">
                                                        <div class="col-sm-4 bg-c-lite-green user-profile">
                                                            <div class="card-block text-center text-white">
                                                                <div class="m-b-25">
                                                                    {{#if user.photo}}
                                                                    <img src="./img/{{user.photo}}" alt="Profile Photo" class="profile-picture">
                                                                    {{else}}
                                                                    <img src="./img/default1.jpg" alt="Profile Photo" class="profile-picture">
                                                                    {{/if}}
                                                                </div>
                                                               
                                                                <h6 class="f-w-600">{{user.firstname}} {{user.lastname}}</h6>
                                                                 {{#if user.photo}}
                                                                <a href="" class="btn remove-photo-btn" >Remove Photo</a>
                                                               <i class="mdi mdi-home"></i>

                                                                {{/if}}
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-8">
                                                            <div class="card-block">
                                                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                                                <div class="row">
                                                                    <div class="col-sm-6">
                                                                        <p class="m-b-10 f-w-600">Email</p>
                                                                        <h6 class="text-muted f-w-400">{{user.email}}</h6>
                                                                    </div>
                                                                    <div class="col-sm-6">
                                                                        <p class="m-b-10 f-w-600">Phone</p>
                                                                        <h6 class="text-muted f-w-400">{{user.phone}}</h6>
                                                                    </div>
                                                                </div>
                                                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Chnage Profile photo</h6>
                                                                <div class="row">
                                                                     <!-- Upload Photo Section -->
                        <form action="/upload" method="post" enctype="multipart/form-data" class="mb-3">
                            
                            <input type="file" class="form-control" id="photo" name="photo" accept="image/*">
                            <button type="submit" class="btn btn-primary btn-block mt-3">Change Photo</button>
                        </form>
                                                                </div>
                                                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                             </div>
                                                </div>
                                            </div>


                                            <!-- Logout Button Section -->
            <div class="col-12 d-flex align-items-center justify-content-center" >
                <a href="/logout" class="btn btn-primary btn-block logout-btn">Logout</a>
            </div>

            </section>

            <script>
                // JavaScript for handling the "Remove Photo" button click event
$(document).ready(function() {
    // Event listener for the "Remove Photo" button
    $('.remove-photo-btn').on('click', function(e) {
        e.preventDefault(); // Prevent the default form submission

        // Send an AJAX POST request to the server to remove the profile photo
        $.ajax({
            type: 'POST',
            url: '/remove-profilePhoto', // Replace with your actual server endpoint
            success: function(response) {
                // Handle the success response from the server
                console.log('Profile photo removed successfully:', response);
                // Optionally, update the UI to reflect the removed photo
                $('.profile-picture').attr('src', './img/default1.jpg'); // Replace with the path to your default photo

                location.reload();
            },
            error: function(xhr, status, error) {
                // Handle any errors that occur during the AJAX request
                console.error('Error removing profile photo:', error);
            }
        });
    });
});

            </script>